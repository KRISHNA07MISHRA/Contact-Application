<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signup"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textSize="45dp"
        android:textStyle="italic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:textColor="#E32424"
        android:layout_marginRight="22dp"/>


    <EditText
        android:id="@+id/email"

        android:layout_width="550dp"

        android:layout_height="45dp"
        android:inputType="textEmailAddress"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="207dp"
        android:layout_marginEnd="35dp"
        android:background="#439FF1"
        android:hint="Enter your Email"

        android:textColorHint="#FFB300" />

    <EditText
        android:layout_width="550dp"

        android:layout_height="45dp"

        android:layout_below="@+id/email"
        android:inputType="textPassword"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="34dp"
        android:background="#439FF1"
        android:hint="Enter your Password"
        android:password="true"
        android:id="@+id/password"
        android:textColorHint="#FFB300" />

    <Button
        android:layout_width="150dp"
        android:layout_height="80dp"

        android:backgroundTint="#4FC1F8"
        android:layout_below="@+id/password"
        android:id="@+id/button"

        android:layout_marginTop="65dp"
        android:layout_centerHorizontal="true"
        android:text="SingUp"
        android:textSize="30dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#A5D0F6"
        android:text="Already Account?"
        android:layout_below="@+id/password"
        android:layout_marginLeft="32dp"
        android:textSize="20dp"
        android:id="@+id/movetologin"
        android:layout_marginTop="11dp"
        android:textColor="#221D1D"/>


</RelativeLayout>